{
  "name": "mongodb-stitch-browser-sdk",
  "version": "4.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "web",
  "author": "MongoDB",
  "license": "Apache2",
  "dependencies": {
    "mongodb-stitch-browser-core": "^4.0.0",
    "mongodb-stitch-browser-services-mongodb-remote": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "tsc && npm run add-version",
    "watch": "tsc -w",
    "lint": "tslint src/**/*.ts",
    "lint-fix": "tslint --fix src/**/*.ts",
    "lint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --write \"{,!(node_modules),!(dist)/**/}*.ts\"",
    "add-version": "sed -i -e \"s/@VERSION@/$npm_package_version/g\" dist/core/auth/internal/StitchAuthImpl.js"
  }
}
