  "private": true,
  "dependencies": {
    "mongodb-stitch-core-admin-client": "^4.0.0",
    "mongodb-stitch-core-sdk": "^4.0.0",
    "mongodb-stitch-core-testutils": "^4.0.0",
    "mongodb-stitch-browser-core": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "npm run build-main && npm run build-module",
    "build-main": "tsc -p tsconfig.umd.json",
    "build-module": "tsc -p tsconfig.esm.json",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "lint-fix": "tslint --fix src/**/*.ts __tests__/**/*.ts",
    "prettier": "prettier --write \"{,!(node_modules),!(lib)/**/}*.ts\"",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.umd.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": ["/lib/", "/node_modules/"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "collectCoverage": true
  }
}
