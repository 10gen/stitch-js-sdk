  "main": "lib/umd/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "description": "",
  "author": "MongoDB Inc.",
  "contributors": [
    {
        "name": "Adam Chelminski",
