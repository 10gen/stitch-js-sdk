{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2015",
        "moduleResolution": "Node",
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "lib/esm",
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "es2017.object"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/**",
        "./lib"
    ]
}
