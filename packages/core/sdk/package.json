{
  "name": "mongodb-stitch-core-sdk",
  "version": "4.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "description": "MongoDB Stitch JavaScript SDK - Core SDK",
  "author": "MongoDB Inc.",
  "contributors": [
    {
        "name": "Adam Chelminski",
        "email": "adam.chelminski@mongodb.com"
    },
    {
        "name": "Eric Daniels",
        "email": "eric.daniels@mongodb.com"
    },
    {
        "name": "Jason Flax",
        "email": "jason.flax@mongodb.com"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "base64-js": "^1.2.3",
    "es6-promise": "^4.2.4",
    "fetch-everywhere": "^1.0.5",
    "bson": "^3.0.0",
    "mongodb-extjson": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts",
    "lint-fix": "tslint --fix src/**/*.ts",
    "prettier": "prettier --write \"{,!(node_modules),!(lib)/**/}*.ts\"",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": ["/lib/", "/node_modules/", "APITestUtils.*"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/APITestUtils.ts"
  }
}
